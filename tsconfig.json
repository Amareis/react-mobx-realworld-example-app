{
  "compilerOptions": {
    "moduleResolution": "node",
    "noEmit": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "es2019",
      "dom"
    ],
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
